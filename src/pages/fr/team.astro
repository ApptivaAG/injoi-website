---
import Main from '@layouts/Main.astro'
import Container from '@components/Container.astro'
import { teamMembers } from 'src/data';

const description =
  "L'équipe Payflink est motivée chaque jour dans les restaurants... pour enfin pouvoir commander et payer. "

---

<Main title="Unser Team" description={description}>
  <Container>

    <h1>Notre équipe</h1>
    <p>L'équipe Payflink est motivée chaque jour dans les restaurants... pour enfin pouvoir commander et payer.</p>
    <div class="employee-list">
      {teamMembers.map(({ name, image, role }) => (
      <div class="employee">
        <img loading="lazy" src={image} alt={name} width="192" height="192" />
        <p>
          <span class="employee-name">{name}</span>
          <br />
          {role.fr}
        </p>
      </div>
      ))}
    </div>
  </Container>
</Main>

<style lang="scss">
  .employee-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 2em;
  }

  .employee {
    width: 16rem;
    text-align: center;

    img {
      border-radius: 1000px;
      box-shadow: 0 0 60px 0px #ccc6;
      background-color: lavender;
      aspect-ratio: 1;

      &[src$=".svg"] {
        padding-top: 1em;
      }
    }
  }

  .employee-name {
    font-size: 1.2em;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 0px;
  }
</style>