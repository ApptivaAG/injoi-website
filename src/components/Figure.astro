---
import FixedPicture from "./FixedPicture.astro";
import { Picture } from '@astrojs/image/components';
import type { ImageMetadata } from "@astrojs/image/dist";

type Size = 'medium' | 'article'
export type Props = {
  src: ImageMetadata | Promise<{ default: ImageMetadata }>
  caption: string
  width?: number
  size?: Size
}
const { src, caption, width, size = 'medium' } = Astro.props as Props

const imageWidth = width ? width : 300

---

<figure>
  {size === 'medium' ?
  <FixedPicture src={src} width={imageWidth} alt={caption} /> :
  <Picture src={src} sizes="(max-width: 700px) 90vw, 576px" widths={[300, 400, 600, 800, 1200]} alt={caption} />}
  <figcaption class={`width-${imageWidth}`}>{caption}</figcaption>
</figure>

<style>
  figure {
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  figcaption {
    font-size: 0.8em;
    font-weight: bold;
    text-align: center;
  }

  .width-300 {
    max-width: 400px;
  }

  :global(img) {
    margin-inline: auto;
  }
</style>